---
import Layout from "../layouts/Base.astro";
---

<Layout
    title="Ad Astra - Page Not Found"
    description="Oops! The page you're looking for doesn't exist."
>
    <!-- Parent container -->
    <div
        class="mt-8 flex h-full flex-grow flex-col items-center justify-center gap-28 md:mt-0 md:gap-14 lg:flex-row"
    >
        <!-- Text container -->
        <div
            class="text-pretty text-center font-404 text-[color:var(--text-color)] [&>p]:text-4xl [&>p]:lg:text-5xl"
        >
            <h1 class="mb-8 text-8xl md:text-9xl">404</h1>
            <p class="mb-2 lg:mb-4">Lost in space?</p>
            <p class="">
                Go <a
                    class="text-inherit underline"
                    href=`${import.meta.env.BASE_URL}/`>home</a
                >.
            </p>
        </div>

        <!-- Image container -->
        <div class="w-11/12 -scale-x-100 transform animate-float md:max-w-md">
            <img
                src=`${import.meta.env.BASE_URL}/webp/astronaut-falling.webp`
                alt="Falling astronaut"
            />
        </div>
    </div>
</Layout>
